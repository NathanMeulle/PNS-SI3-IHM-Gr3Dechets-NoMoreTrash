<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/Background"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/logo"
        android:src="@mipmap/no_more_trash_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="No More Trash !"
        android:textColor="#000"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/logo"
        />

    <Button
        android:layout_marginTop="100dp"
        android:id="@+id/boutonStatistiques"
        android:background="@color/ButtonOne"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="22sp"
        android:text="Statistiques"

        app:layout_constraintTop_toBottomOf="@+id/text"/>
    <Button
        android:id="@+id/boutonSignalement"
        android:layout_width="match_parent"
        android:background="@color/ButtonTwo"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:textSize="22sp"
        android:text="Signaler un dÃ©chet"
        app:layout_constraintTop_toBottomOf="@+id/boutonStatistiques"/>
    <Button
        android:id="@+id/boutonMesSignalements"
        android:background="@color/ButtonOne"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:textSize="22sp"
        android:text="Mes signalements"
        app:layout_constraintTop_toBottomOf="@+id/boutonSignalement"/>



</androidx.constraintlayout.widget.ConstraintLayout>