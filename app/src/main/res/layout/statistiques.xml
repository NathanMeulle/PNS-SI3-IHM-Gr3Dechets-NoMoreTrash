<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_marginTop="0dp"
        android:layout_marginLeft="00dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/boutonRetour"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#00000000"
        android:drawableLeft="@drawable/retour"
        android:stateListAnimator="@null"
        android:text="Retour"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mes statistiques"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="45dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#000"/>

    <TextView
        android:id="@android:id/empty"
        android:text = "Aucune statistique"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintBottom_toTopOf="@+id/boutonRetour"
        android:gravity="center_vertical|center_horizontal"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/activity_statistic_viewpager"
        android:layout_below="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/diagCirculaire">
    </androidx.viewpager.widget.ViewPager>

    <Button
        android:id="@+id/diagBaton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/diagCirculaire"
        android:text="Diagramme baton"
        />
    <Button
        android:id="@+id/diagCirculaire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/diagBaton"
        android:text="Diagramme circulaire"
        />


</androidx.constraintlayout.widget.ConstraintLayout>